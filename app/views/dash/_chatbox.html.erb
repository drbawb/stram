<div class="chat-box">
  <form id="alleluia-connect">
    <input id="alleluia-connect-name" type="hidden" value="<%= session[:twitch_name] || session[:twitch_user] %>" />
    <input id="alleluia-connect-id" type="hidden" value=<%= session[:twitch_id] %> />
  </form>

  <div id="alleluia-stale" class="hidden">
    You are viewing old messages, scroll down to see the latest ...
  </div>

  <div id="alleluia-messages"></div>

  <div class="wrap">
	  <div id="alleluia-prompt">
		<input type="text" id="alleluia-input" />
		<input type="button" id="alleluia-emotes" value="E" />

		<div id="alleluia-emote-menu" class="hidden"></div>
	  </div>
  </div>
</div>

<%= javascript_include_tag "alleluia/bundle" %>
